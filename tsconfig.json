{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./types"],
    "outDir": "dist/esm",
    "declarationDir": "dist/esm/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
